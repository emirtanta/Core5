@model IEnumerable<XCafeProject.Models.About>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<p>
    <a asp-action="Create" class="btn btn-outline-success">Konu Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Başlık
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm"><i class="bi bi-pencil"></i>Düzenle</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm"><i class="bi bi-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
