@model IEnumerable<XCafeProject.Models.Blog>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<table class="table">
    <thead>
        <tr>
            <th>
                Resim
            </th>
            <th>
                Email
            </th>
            <th>
                Durumu
            </th>
            <th>
                Mesaj
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @if (item.Image==null)
                    {
                        <img src="~/pato-master/images/noImage.png" width="20">
                    }
                    else
                    {
                        <img src="@item.Image" width="20">
                    }
            </td>
            
            
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                    @if (item.Onay)
                    {
                        <button class="btn btn-outline-success btn-sm"><i class="bi bi-check-circle"></i> Evet</button>
                    }
                    else
                    {
                        <button class="btn btn-outline-success btn-sm"><i class="bi bi-x-circle"></i> Hayır</button>
                    }
                </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm"><i class="bi bi-pencil"></i></a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm"><i class="bi bi-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
