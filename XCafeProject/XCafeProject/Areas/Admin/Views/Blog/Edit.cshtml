@model XCafeProject.Models.Blog

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Yorum Onaylama Sayfası</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                
                <input asp-for="Title" class="form-control" hidden="hidden" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Name" class="form-control" hidden="hidden" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Email" class="form-control" hidden="hidden" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Image" class="form-control" hidden="hidden" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Onay" /> @Html.DisplayNameFor(model => model.Onay)
                </label>
            </div>
            <div class="form-group">
                <input asp-for="Message" class="form-control" hidden="hidden" />
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Tarih" class="form-control" hidden="hidden"/>
                <span asp-validation-for="Tarih" class="text-danger" ></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Onayla" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-danger">İptal</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
